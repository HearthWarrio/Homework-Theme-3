   "source": [
    "def sum_distance(from_val, to_val):\n",
    "    if from_val > to_val:\n",
    "        from_val, to_val = to_val, from_val\n",
    "    \n",
    "    return (from_val + to_val) * (to_val - from_val + 1) // 2\n",
    "\n",
    "print(sum_distance(1, 5)) \n",
    "print(sum_distance(5, 1))  \n",
    "print(sum_distance(10, 10)) \n",
    "print(sum_distance(-3, 2)) "
   ]
